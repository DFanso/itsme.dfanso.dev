---
const asciiArt = `
██████  ███████  █████  ███    ██ ███████  ██████  
██   ██ ██      ██   ██ ████   ██ ██      ██    ██ 
██   ██ █████   ███████ ██ ██  ██ ███████ ██    ██ 
██   ██ ██      ██   ██ ██  ██ ██      ██ ██    ██ 
██████  ██      ██   ██ ██   ████ ███████  ██████  
`;

const version = "v2.4.2";
---

<div class="welcome-container">
	<pre class="ascii-art text-[#7aa2f7]">{asciiArt}</pre>
	<div class="welcome-text mt-4">
		<p>Welcome to my terminal portfolio. (Version {version})</p>
		<p class="mt-2 text-[#a9b1d6]">----</p>
		<p class="mt-2">Type <span class="text-[#9ece6a]">'help'</span> to see available commands.</p>
	</div>
</div>

<style>
	.welcome-container {
		@apply font-mono;
	}

	.ascii-art {
		font-family: 'Fira Code', monospace;
		line-height: 1.2;
		white-space: pre;
	}

	.welcome-text {
		@apply text-[#c0caf5] text-sm;
	}
</style>
