---
const { class: className } = Astro.props;

const socialLinks = [
    { id: 'GH', name: 'github/dfanso', url: 'https://github.com/dfanso' },
    { id: 'IN', name: 'linkedin/leogavin', url: 'https://www.linkedin.com/in/leogavin/' },
    { id: 'DC', name: 'discord', url: 'https://discord.gg/DcFFdcjfAf' },
    { id: 'IG', name: 'instagram', url: 'https://instagram.com/dfanso' }
];
---

<section class:list={[className]}>
    <div class="command-output">
        <div class="text-[#bb9af7] font-bold mb-2">Contact Information</div>
        <div class="space-y-2">
            {socialLinks.map(link => (
                <div class="flex items-center gap-2">
                    <span class="text-[#565f89]">└─▶</span>
                    <span class="text-[#e0af68]">[{link.id}]</span>
                    <a href={link.url} target="_blank" class="text-[#7aa2f7] hover:text-[#9ece6a] transition-colors">
                        {link.name}
                    </a>
                </div>
            ))}
        </div>
        <div class="mt-4 text-[#565f89] text-xs">
            <span class="text-[#9ece6a]">Note:</span> Click on any link to open in a new tab
        </div>
    </div>
</section> 