---
import { Icon } from 'astro-icon/components';
const { class: className } = Astro.props;

const certifications = [
    {
        name: 'Multicloud Network Associate',
        issuer: 'Aviatrix',
        date: 'Issued Sep 2025',
        expiry: 'Expires Sep 2028',
        id: 'Credential ID 2025-27675',
        icon: 'simple-icons:aviatrix' // Aviatrix might not exist, fallback to cloud or shield
    },
    {
        name: 'AWS Cloud Practitioner Essentials',
        issuer: 'Amazon Web Services (AWS)',
        date: 'Issued May 2025',
        icon: 'simple-icons:amazonaws'
    }
];
---

<section class:list={[className]}>
    <div class="command-output">
        <div class="text-[#bb9af7] font-bold mb-2">Certifications</div>
        <div class="space-y-4">
            {certifications.map(cert => (
                <div class="cert-entry">
                    <div class="flex items-center gap-2 text-[#7aa2f7]">
                        <span class="text-[#565f89]">└─▶</span>
                        <span class="text-[#e0af68]">{cert.name}</span>
                    </div>
                    <div class="ml-6 mt-1 flex items-center gap-2 text-xs">
                        <span class="text-[#9ece6a]">{cert.issuer}</span>
                        {cert.id && (
                            <>
                                <span class="text-[#565f89]">|</span>
                                <span class="text-[#565f89]">{cert.id}</span>
                            </>
                        )}
                    </div>
                    <div class="ml-6 mt-1 text-[#565f89] text-xs">
                        {cert.date} {cert.expiry ? `• ${cert.expiry}` : ''}
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>


