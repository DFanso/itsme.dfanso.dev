---
import { Image } from 'astro:assets';
const { class: className } = Astro.props;

const avatarUrl = "https://github.com/dfanso.png";
---

<header class:list={["flex items-start gap-4", className]}>
    <pre class="text-[#7aa2f7] text-xs leading-4 mt-2">
</pre>
    <div class="space-y-3">
        <Image 
            src={avatarUrl}
            alt="Leo Felcianas"
            width={112}
            height={112}
            class="rounded-full border-2 border-[#7aa2f7]"
            format="webp"
            loading="eager"
        />
        <div>
            <h1 class="text-xl font-bold text-[#7aa2f7] cursor">Leo Felcianas</h1>
            <p class="text-[#a9b1d6] text-sm">Associate DevOps Engineer at Empite</p>
        </div>
    </div>
</header> 