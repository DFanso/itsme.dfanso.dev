---
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Leo Felcianas - DevOps Engineer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Leo Felcianas - DevOps Engineer</title>
		<ViewTransitions />
	</head>
	<body class="bg-[#1a1b26] text-[#a9b1d6] min-h-screen font-mono">
		<main class="container mx-auto px-4 py-8 max-w-4xl">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}

	.cursor::after {
		content: "_";
		animation: blink 1s step-end infinite;
		color: #7aa2f7;
	}

	.command-prompt {
		color: #7aa2f7;
	}

	a {
		color: #7dcfff;
		text-decoration: none;
		transition: color 0.2s;
	}

	a:hover {
		color: #bb9af7;
	}

	.section-title {
		color: #7aa2f7;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin: 2rem 0 1rem;
	}

	.section-title::before {
		content: "$";
		color: #9ece6a;
	}
</style>
